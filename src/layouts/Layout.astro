---
import Chat from "../components/Chat";
import Footer from "../components/Footer.astro";
import "../styles/global.css";

interface Props {
  title?: string;
}

const { title = "Christopher Trumpet" } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1, viewport-fit=cover"
    />
    <meta name="theme-color" content="#eee" />
    <meta
      name="description"
      content="Personal website for Christopher Trumpet Jr. The site contains my portfolio, web toys, media archive, blogs, and cooking logs."
    />
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="flex flex-col">
    <main class="container grow mx-auto">
      <slot />
    </main>
    <Footer />
    <Chat client:load />
  </body>
  <div id="grainy"></div>
</html>
