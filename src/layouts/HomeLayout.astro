---
import Chat from "../components/Chat";
import Divider from "../components/Divider.astro";
import Footer from "../components/Footer.astro";
import Sidebar from "../components/Sidebar.astro";
import { ClientRouter } from "astro:transitions";
import "../styles/global.css";

interface Props {
  title?: string;
}

const { title = "Christopher Trumpet" } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1, viewport-fit=cover"
    />
    <meta name="theme-color" content="#eee" />
    <meta
      name="description"
      content="Personal website for Christopher Trumpet Jr. The site contains my portfolio, web toys, media archive, blogs, and cooking logs."
    />
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <meta name="generator" content={Astro.generator} />
    <ClientRouter />
    <title>{title}</title>
  </head>
  <body transition:animate="none">
    <div
      class="min-h-dvh w-full grid grid-cols-1 grid-rows-[1fr_auto_fit-content] lg:grid-cols-[1fr_auto_1fr] lg:grid-rows-1"
    >
      <div
        class="flex flex-col max-w-3xl row-start-1 mx-auto lg:col-start-1 min-d-dvh"
        transition:persist
      >
        <Sidebar classList="grow" />
      </div>

      <div
        class="row-start-2 lg:col-start-2 lg:row-start-1"
        transition:persist=""
      >
        <Divider />
      </div>

      <main
        class="w-full h-full max-w-3xl row-start-3 mx-auto lg:col-start-3 lg:row-span-full"
      >
        <slot />
        <div class="lg:hidden">
          <Footer />
        </div>
      </main>
    </div>
    <Chat client:load />
    <div id="grainy"></div>
  </body>
</html>
