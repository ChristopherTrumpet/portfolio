---
import NavigationButton from "./NavigationButton.astro";
---

<nav class="navigation">
  <ul class="flex flex-col gap-4 pt-2 lg:flex-row md:pt-0 sm:flex-wrap">
    <li class="flex-1 inline-block">
      <NavigationButton href="/projects">
        <!-- <Icon name="tabler:cards" size={24} /> -->
        <svg
          xmlns="http://www.w3.org/2000/svg"
          width="24"
          height="24"
          viewBox="0 0 24 24"
        >
          <path
            fill="none"
            stroke="currentColor"
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="1.25"
            d="m3.604 7.197l7.138-3.109a.96.96 0 0 1 1.27.527l4.924 11.902a1 1 0 0 1-.514 1.304L9.285 20.93a.96.96 0 0 1-1.271-.527L3.09 8.5a1 1 0 0 1 .514-1.304zM15 4h1a1 1 0 0 1 1 1v3.5M20 6q.396.168.768.315a1 1 0 0 1 .53 1.311L19 13"
          ></path>
        </svg>
        projects
      </NavigationButton>
    </li>
    <div class="h-auto border-l border-r border-zinc-300"></div>
    <li class="flex-1 inline-block">
      <NavigationButton href="/chat" disabled={false}>
        <!-- <Icon name="tabler:message-circle" size={24} /> -->
        <svg
          xmlns="http://www.w3.org/2000/svg"
          width="24"
          height="24"
          viewBox="0 0 24 24"
        >
          <path
            fill="none"
            stroke="currentColor"
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="1.25"
            d="m3 20l1.3-3.9C1.976 12.663 2.874 8.228 6.4 5.726c3.526-2.501 8.59-2.296 11.845.48c3.255 2.777 3.695 7.266 1.029 10.501S11.659 20.922 7.7 19z"
          ></path>
        </svg>
        chat
      </NavigationButton>
    </li>
    <li class="flex-1 inline-block">
      <NavigationButton href="/sandbox" disabled="true">
        <svg
          xmlns="http://www.w3.org/2000/svg"
          width="24px"
          height="24px"
          viewBox="0 0 24 24"
        >
          <g
            fill="none"
            stroke="currentColor"
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="1.25"
          >
            <path
              d="M19.953 8.017L21 15v2a3 3 0 0 1-3 3H6a3 3 0 0 1-3-3v-2l1.245-8.297A2 2 0 0 1 6.222 5H10M3 15h18M13 3l5.5 1.5m-2.75-.75l-2 7"
            ></path>
            <path d="M7 10.5q2.5-1 5 0t5 0"></path>
          </g>
        </svg>
        sandbox
      </NavigationButton>
    </li>
    <li class="flex-1 inline-block">
      <NavigationButton href="/blog" disabled="true">
        <svg
          xmlns="http://www.w3.org/2000/svg"
          width="24px"
          height="24px"
          viewBox="0 0 24 24"
        >
          <g
            fill="none"
            stroke="currentColor"
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="1.25"
          >
            <path d="m14 6l7 7l-4 4"></path>
            <path
              d="M5.828 18.172a2.83 2.83 0 0 0 4 0L20.414 7.586a2 2 0 0 0 0-2.829l-1.171-1.171a2 2 0 0 0-2.829 0L5.828 14.172a2.83 2.83 0 0 0 0 4M4 20l1.768-1.768"
            ></path>
          </g>
        </svg>
        blog
      </NavigationButton>
    </li>
  </ul>
