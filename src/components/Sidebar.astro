<script>
  const trumpetSfx = document.querySelector("#trumpet-sfx") as HTMLAudioElement;
  const button = document.querySelector("#play-btn") as HTMLButtonElement;

  function play() {
    if (trumpetSfx) {
      trumpetSfx.load();
      trumpetSfx.play();
    }
  }

  if (button) {
    button.addEventListener("click", play);
  }
</script>
