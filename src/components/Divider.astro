---
interface Props {
  classList?: string;
}

const { classList } = Astro.props;

const dividerClass =
  "diagonal-border border-t border-b lg:border-l lg:border-r h-6 w-full lg:w-6 lg:h-full border-[#ccc]";
---

<div class:list={[classList, dividerClass]}></div>

<style>
  .diagonal-border {
    background: repeating-linear-gradient(
      30deg,
      transparent 0px,
      transparent 10px,
      #ccc 10px,
      #ccc 11px
    );

    background-origin: border-box;
    background-clip: border-box;
  }
</style>
