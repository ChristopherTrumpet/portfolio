---
interface Props {
  name: string;
  description: string;
  link?: string;
}

const { name, description, link } = Astro.props;

const hasLink = !!link;
---

<p class:list={["transition-all text-zinc-500"]}>
  <a href={link} target="_blank"
    ><span
      class:list={[
        "pr-1 font-bold text-zinc-900",
        hasLink && "hover:underline",
      ]}
      >{name}
      {
        hasLink && (
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="16"
            height="16"
            viewBox="0 0 24 24"
            class="mb-0.5 inline-block cursor-pointer"
          >
            <path
              fill="none"
              stroke="currentColor"
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M12 6H6a2 2 0 0 0-2 2v10a2 2 0 0 0 2 2h10a2 2 0 0 0 2-2v-6m-7 1l9-9m-5 0h5v5"
            />
          </svg>
        )
      }
    </span>
  </a>
  {description}
</p>
