---
export const prerender = false;

import Sidebar from "../components/Sidebar.astro";
import Divider from "../components/Divider.astro";
import Main from "../components/Main.astro";
import Chat from "../components/Chat";
import "../styles/global.css";
import Footer from "../components/Footer.astro";

const title = "Christopher Trumpet";
const description =
  "Personal website for Christopher Trumpet Jr. The site contains my portfolio, web toys, media archive, blogs, and cooking logs.";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1, viewport-fit=cover"
    />
    <meta name="theme-color" content="#eee" />
    <meta name="description" content={description} />
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <div
      class="grid grid-rows-[1fr_auto_auto] grid-cols-1 lg:grid-cols-[1fr_auto_1fr] h-dvh w-full"
    >
      <Sidebar />
      <Divider />
      <Main />
      <div class="lg:hidden">
        <Footer />
      </div>
    </div>
    <Chat client:load />
    <div id="grainy"></div>
  </body>
</html>
