---
import Link from "../components/Link.astro";
import Layout from "../layouts/Layout.astro";
---

<Layout>
  <main
    class="flex flex-col gap-4 justify-center items-center max-w-lg mx-auto h-dvh px-8 md:px-0 pb-18"
  >
    <header>
      <h1 class="font-bold text-xl mb-2">Christopher Trumpet Jr.</h1>
      <p class="text-base text-zinc-700">
        Hey there, my website is currently in shambles. I should have a fancier
        site up soon! In the mean time, my socials and contact are below if your
        interested. More to come though.
      </p>
    </header>
    <nav class="w-full">
      <ul class="flex flex-wrap gap-6">
        <li>
          <Link href="https://github.com/ChristopherTrumpet">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="24"
              height="24"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
              class="icon icon-tabler icons-tabler-outline icon-tabler-brand-github"
              slot="before-icon"
              ><path stroke="none" d="M0 0h24v24H0z" fill="none"></path><path
                d="M9 19c-4.3 1.4 -4.3 -2.5 -6 -3m12 5v-3.5c0 -1 .1 -1.4 -.5 -2c2.8 -.3 5.5 -1.4 5.5 -6a4.6 4.6 0 0 0 -1.3 -3.2a4.2 4.2 0 0 0 -.1 -3.2s-1.1 -.3 -3.5 1.3a12.3 12.3 0 0 0 -6.2 0c-2.4 -1.6 -3.5 -1.3 -3.5 -1.3a4.2 4.2 0 0 0 -.1 3.2a4.6 4.6 0 0 0 -1.3 3.2c0 4.6 2.7 5.7 5.5 6c-.6 .6 -.6 1.2 -.5 2v3.5"
              ></path>
            </svg>
            GitHub
          </Link>
        </li>
        <li>
          <Link href="https://www.linkedin.com/in/christophertrumpet/">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="24"
              height="24"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
              class="icon icon-tabler icons-tabler-outline icon-tabler-brand-linkedin"
              slot="before-icon"
              ><path stroke="none" d="M0 0h24v24H0z" fill="none"></path><path
                d="M8 11v5"></path><path d="M8 8v.01"></path><path d="M12 16v-5"
              ></path><path d="M16 16v-3a2 2 0 1 0 -4 0"></path><path
                d="M3 7a4 4 0 0 1 4 -4h10a4 4 0 0 1 4 4v10a4 4 0 0 1 -4 4h-10a4 4 0 0 1 -4 -4z"
              ></path></svg
            >
            LinkedIn
          </Link>
        </li>
        <li>
          <Link href="/resume.pdf">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="24"
              height="24"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
              class="icon icon-tabler icons-tabler-outline icon-tabler-notes"
              slot="before-icon"
              ><path stroke="none" d="M0 0h24v24H0z" fill="none"></path><path
                d="M5 3m0 2a2 2 0 0 1 2 -2h10a2 2 0 0 1 2 2v14a2 2 0 0 1 -2 2h-10a2 2 0 0 1 -2 -2z"
              ></path><path d="M9 7l6 0"></path><path d="M9 11l6 0"></path><path
                d="M9 15l4 0"></path></svg
            >
            Resume
          </Link>
        </li>
      </ul>
    </nav>
  </main>
</Layout>

<style>
  li:hover {
    color: var(--color-zinc-500);
  }
</style>
